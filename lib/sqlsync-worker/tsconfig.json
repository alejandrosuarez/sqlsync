{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "lib": ["ES6", "WebWorker"],

    /* Compiling */
    "allowJs": true,
    "outDir": "dist",
    "declaration": true,
    "sourceMap": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"]
}
